cp safe/${1} ./
perl -pi -e 's/\r\n/\n/gmi' ${1}
perl -pi -e 's/\r//gmi' ${1}
perl -pi -e 's/\n/\^/gmi' ${1}
perl -pi -e 's/\^\^\^/\#3/gmi' ${1}
perl -pi -e 's/\^//gmi' ${1} 

perl -pi -e 's/\#3/\n\n/gmi' ${1}  

perl -pi -e 's/^.Six/^& Six/gmi' ${1}  
perl -pi -e 's/^.Seven/^& Seven/gmi' ${1}  
perl -pi -e 's/^.Eight/^& Eight/gmi' ${1}  
perl -pi -e 's/^.Nine/^& Nine/gmi' ${1}  


